<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/messageUserImg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/dark19"
        tools:layout_editor_absoluteY="8dp"
        android:layout_marginLeft="8dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/messageBodyLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="8dp"
        android:text="dskjfgsdkjfgksdgfkhsdgfkjgdskjfgsdkjfgksdgfkhsdgfkjgdskjfgsdkjfgksdgfkhsdgfkjgdskjfgsdkjfgksdgfkhsdgfkjgdskjfgsdkjfgksdgfkhsdgfkjg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="@+id/messageUserNameLabel"
        app:layout_constraintTop_toBottomOf="@+id/timeSentLabel"
        app:layout_constraintVertical_bias="0.002"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="56dp" />

    <TextView
        android:id="@+id/timeSentLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Mar 10 10.30 PM"
        app:layout_constraintStart_toEndOf="@+id/messageUserNameLabel"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/messageUserNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Kaveri"
        app:layout_constraintStart_toEndOf="@+id/messageUserImg"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>